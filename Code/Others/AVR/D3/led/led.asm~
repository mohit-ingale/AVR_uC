; ******************************************************
; BASIC .ASM template file for AVR
; ******************************************************

.include "C:\VMLAB\include\m8def.inc"

; Define here the variables
;
.def  temp  =r16

; Define here Reset and interrupt vectors, if any
;
reset:
   rjmp start
   reti      ; Addr $01
   reti      ; Addr $02
   reti      ; Addr $03
   reti      ; Addr $04
   reti      ; Addr $05
   reti      ; Addr $06        Use 'rjmp myVector'
   reti      ; Addr $07        to define a interrupt vector
   reti      ; Addr $08
   reti      ; Addr $09
   reti      ; Addr $0A
   reti      ; Addr $0B        This is just an example
   reti      ; Addr $0C        Not all MCUs have the same
   reti      ; Addr $0D        number of interrupt vectors
   reti      ; Addr $0E
   reti      ; Addr $0F
   reti      ; Addr $10

; Program starts here after Reset
;
start:
  ldi r16,LOW(RAMEND)
  ldi r17,HIGH(RAMEND)
  OUT SPL,r16
  OUT SPH,r17

 ldi r16,0xff;
 OUT DDRB,r16;


forever:
  ldi r16,0xff;
  OUT DDRB, r17;
   RCALL DELAY;
  ldi r16,0x00;
  OUT DDRB, r17;
  RCALL DELAY;
	rjmp forever
	
   DELAY:
   LDI r16,10;
   loop :
   NOP
   NOP
   NOP
   DEC r16
   BRNE loop
   RET

